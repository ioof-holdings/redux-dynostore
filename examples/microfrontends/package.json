{
  "name": "microfrontends-example",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "prebuild": "npm run externals:build",
    "build": "ENV=production webpack",
    "prestart": "npm run externals:build",
    "start": "webpack-dev-server",
    "start:production": "NODE_ENV=production npm start",
    "externals:build": "lerna run build && npm run externals:copy",
    "externals:copy": "rimraf externals && copyfiles -f packages/*/bundle/* externals"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@redux-dynostore/core": "^3.0.0",
    "@redux-dynostore/react-redux": "^3.0.0",
    "@redux-dynostore/react-redux-subspace": "^3.0.0",
    "@redux-dynostore/redux-subspace": "^3.0.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.1.0",
    "redux": "^4.0.1",
    "redux-subspace": "^3.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^4.6.0",
    "copyfiles": "^2.1.0",
    "core-js": "^2.6.2",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.10.5",
    "redux-devtools-extension": "^2.13.7",
    "rimraf": "^2.6.3",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
